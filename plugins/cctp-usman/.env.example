# CCTP Plugin Configuration
# All settings are optional - CCTP APIs are public and require no authentication

# CCTP API Base URL (defaults to mainnet)
CCTP_BASE_URL=https://iris-api.circle.com

# Request timeout in milliseconds
CCTP_TIMEOUT=10000

# Maximum retry attempts for failed requests
CCTP_MAX_RETRIES=3

# Initial backoff delay in milliseconds for exponential backoff
CCTP_INITIAL_BACKOFF_MS=1000

# For testnet, use:
# CCTP_BASE_URL=https://iris-api-sandbox.circle.com
